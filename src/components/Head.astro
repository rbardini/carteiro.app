---
import { author } from '../../package.json'
import '../styles/blog.css'

export interface Props {
  title?: string
}

const { title } = Astro.props as Props
const name = 'Blog do Carteiro'
---

<meta charset="utf-8" />
<title>{[title, name].filter(Boolean).join(' | ')}</title>
<meta name="author" content={author} />
<meta name="viewport" content="width=device-width" />
<meta name="theme-color" content="#ffc107" />
<link rel="alternate" href="/blog/rss.xml"  type="application/rss+xml" title="RSS" />
<link rel="sitemap" href="/sitemap.xml" type="application/xml" title="Sitemap" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;1,300&family=Roboto+Slab:wght@700&display=swap" />
