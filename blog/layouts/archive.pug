extends layout.pug

block title
  title #{title} | #{site.title}

block content
  article
    header
      h1 #{title}
    .entry
      each year in archive
        h2= year.year
        ul.unstyled-list
          each post in year.data
            li.archive-item
              time.date(datetime=post.date)= post.date.format('D MMM')
              a(href="/blog/" + post.path)= post.title
