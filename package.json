{
  "name": "carteiro.app",
  "version": "1.0.0",
  "description": "Carteiro for Android's website",
  "author": "Rafael Bardini",
  "homepage": "https://carteiro.app",
  "keywords": [
    "correios",
    "ect",
    "sro",
    "postal",
    "mail",
    "package",
    "tracking",
    "shipping",
    "brazil"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:blog": "node blog/index.js",
    "build:html": "html-minifier --file-ext html --input-dir src --output-dir dist --collapse-whitespace",
    "build:scripts": "terser src/app.js -o dist/app.js --compress --mangle",
    "build:styles": "csso src/main.css -o dist/main.css",
    "build:assets": "cp -v src/_redirects src/*.ico src/*.svg src/*.png dist",
    "cleanup": "rm -rf dist",
    "format": "prettier . --ignore-path .gitignore",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "markdownlint . --ignore-path .gitignore",
    "postcleanup": "mkdir dist",
    "prebuild": "npm run cleanup",
    "prepare": "husky install",
    "start": "npm run build",
    "start:blog": "npm run build:blog -- --development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbardini/carteiro.app.git"
  },
  "bugs": {
    "url": "https://github.com/rbardini/carteiro.app/issues"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@metalsmith/collections": "1.2.1",
    "@metalsmith/layouts": "2.4.0",
    "@metalsmith/permalinks": "2.4.0",
    "@metalsmith/remove": "1.1.2",
    "cssnano": "5.1.7",
    "jstransformer-pug": "0.4.0",
    "markdown-it-footnote": "3.0.3",
    "metalsmith": "2.4.2",
    "metalsmith-archive": "0.1.1",
    "metalsmith-assets-improved": "1.0.1",
    "metalsmith-collection-metadata": "1.0.0",
    "metalsmith-html-minifier": "4.0.1",
    "metalsmith-markdownit": "0.5.0",
    "metalsmith-moment": "2.1.0",
    "metalsmith-move-up": "3.0.0",
    "metalsmith-postcss": "4.2.0",
    "metalsmith-renamer": "0.5.183",
    "metalsmith-serve": "0.0.7",
    "metalsmith-sitemap": "1.2.2",
    "metalsmith-watch": "1.0.3",
    "postcss": "8.4.12",
    "postcss-color-mod-function": "3.0.3",
    "postcss-preset-env": "7.4.3",
    "pug": "3.0.2",
    "rss": "1.2.2",
    "turbolinks": "5.2.0",
    "yargs": "17.4.1"
  },
  "devDependencies": {
    "csso-cli": "3.0.0",
    "eslint": "8.13.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "html-minifier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "markdownlint-cli": "0.31.1",
    "matter-now": "3.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "terser": "5.12.1"
  }
}
