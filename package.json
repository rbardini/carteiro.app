{
  "name": "carteiro.app",
  "version": "0.1.0",
  "description": "Carteiro for Android website",
  "author": "Rafael Bardini",
  "homepage": "https://carteiro.app",
  "keywords": [
    "correios",
    "ect",
    "sro",
    "postal",
    "mail",
    "package",
    "tracking",
    "shipping",
    "brazil"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:html": "html-minifier src/index.html -o dist/index.html --collapse-whitespace",
    "build:scripts": "uglifyjs src/app.js -o dist/app.js",
    "build:styles": "csso src/main.css -o dist/main.css",
    "build:assets": "cp -v src/*.{ico,svg,png} dist",
    "cleanup": "rm -rf dist",
    "postcleanup": "mkdir dist",
    "prebuild": "npm run cleanup",
    "start": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/rbardini/carteiro.app"
  },
  "bugs": {
    "url": "https://bitbucket.org/rbardini/carteiro.app/issues"
  },
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "csso-cli": "1.1.0",
    "html-minifier": "3.5.16",
    "npm-run-all": "4.1.3",
    "uglify-js": "3.4.0"
  }
}
